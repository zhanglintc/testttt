{
  "name": "Mmrz",
  "version": "0.0.1",
  "manifest_version": 2,

  // 简单描述
  "description": "查询单词",
  "icons": {
    "16": "image/icon16.png",
    "48": "image/icon48.png"
  },

  // 选择默认语言
  // "default_locale": "en",

  // 浏览器小图表部分
  "browser_action": {
    "default_title": "Mmrz",
    "default_icon": "image/icon16.png",
    "default_popup": "main.html"
  },

  "background": {   
    "scripts": ["menu.js"]   
  }, 

  // 引入一个脚本
  "content_scripts": [
    {
      "js": ["common.js"],

      // 在什么情况下使用该脚本
      "matches": ["<all_urls>"],

      // 什么情况下运行【文档加载开始】
      "run_at": "document_start",

      "match_about_blank":true,
      "all_frames": true
    }
  ],

  // 应用协议页面
  "permissions": [
    "contextMenus",
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}